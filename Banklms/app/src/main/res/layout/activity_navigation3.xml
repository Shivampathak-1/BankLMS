<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homeback"
    android:id="@+id/drawer"

    tools:context=".Navigation3">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:title="Bank LMS"
            app:titleTextColor="@color/black" />


        <Button
            android:id="@+id/button5"
            android:layout_width="70dp"
            android:layout_height="144dp"
            android:layout_below="@+id/toolbar1"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="146dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="152dp"
            android:layout_marginEnd="145dp"
            android:background="@drawable/loancalc"
            android:onClick="LoanCalc" />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="144dp"
            android:layout_below="@+id/toolbar1"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="11dp"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="152dp"
            android:layout_marginEnd="275dp"
            android:background="@drawable/loaninfo"
            android:onClick="LoanInfo" />

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="144dp"
            android:layout_below="@+id/toolbar1"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="146dp"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="382dp"
            android:layout_marginEnd="145dp"
            android:background="@drawable/helpcen"
            android:onClick="HelpCen" />

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="144dp"
            android:layout_below="@+id/toolbar1"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="279dp"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="383dp"
            android:layout_marginEnd="9dp"
            android:background="@drawable/faq"
            android:onClick="Faq" />

        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="144dp"
            android:layout_below="@+id/toolbar1"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="381dp"
            android:layout_marginEnd="275dp"
            android:background="@drawable/prof"
            android:onClick="Profile" />

        <Button
            android:id="@+id/button10"
            android:layout_width="wrap_content"
            android:layout_height="144dp"
            android:layout_below="@+id/toolbar1"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="279dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="152dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/applyforloan"
            android:onClick="ApplyLoan" />

    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navmenu1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/icon_menu"
        >


    </com.google.android.material.navigation.NavigationView>


</androidx.drawerlayout.widget.DrawerLayout>