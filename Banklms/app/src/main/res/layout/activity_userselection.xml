<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserSelection"
    android:background="@drawable/userselbg">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:text="Select User Type"
        android:textColor="#000409"
        android:textSize="36dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/customer"
        android:layout_width="259dp"
        android:layout_height="57dp"
        android:layout_marginTop="88dp"
        android:background="@drawable/round_btn"
        android:backgroundTint="#6EDA73"
        android:onClick="Customer"
        android:text="Customer"
        android:textColor="@color/white"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="@+id/textView7"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <Button
        android:id="@+id/bank"
        android:layout_width="259dp"
        android:layout_height="57dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/round_btn"
        android:backgroundTint="#1C8AEA"
        android:onClick="Bank"
        android:text="Bank Employee"
        android:textColor="@color/white"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="@+id/customer"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/customer"
        app:layout_constraintTop_toBottomOf="@+id/customer" />

</androidx.constraintlayout.widget.ConstraintLayout>